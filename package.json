{
    "name": "@record-evolution/widget-overlay",
    "description": "Webcomponent widget-overlay following open-wc recommendations",
    "license": "MIT",
    "author": "widget-overlay",
    "version": "1.0.9",
    "engines": {
        "node": ">=24.9.0",
        "npm": ">=10.0.2"
    },
    "type": "module",
    "main": "dist/widget-overlay.js",
    "types": "dist/src/widget-overlay.d.ts",
    "files": [
        "dist",
        "src",
        "thumbnail.png"
    ],
    "scripts": {
        "analyze": "cem analyze --litelement",
        "start": "vite",
        "build": "vite build",
        "watch": "vite build --watch",
        "link": "npm run build && npm link && cd ../RESWARM/frontend && npm link @record-evolution/widget-overlay",
        "unlink": "npm unlink --global && cd ../RESWARM/frontend && npm unlink @record-evolution/widget-overlay && npm i @record-evolution/widget-overlay",
        "types": "xxxcat src/definition-schema.json | json2ts --style.tabWidth=4 > src/definition-schema.d.ts",
        "release": "npm run build && npm version patch --tag-version-prefix='' && git push && git push --tag && npm run build"
    },
    "dependencies": {
        "lit": "^3.3.2"
    },
    "devDependencies": {
        "@custom-elements-manifest/analyzer": "^0.10.4",
        "@rollup/plugin-replace": "^6.0.2",
        "json-schema-to-typescript": "^15.0.4",
        "typescript": "5.9.3",
        "vite": "^7.3.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/RecordEvolution/widget-overlay.git"
    },
    "keywords": [
        "widget",
        "image"
    ],
    "bugs": {
        "url": "https://github.com/RecordEvolution/widget-overlay/issues"
    },
    "homepage": "https://github.com/RecordEvolution/widget-overlay#readme"
}
